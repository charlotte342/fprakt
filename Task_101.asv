%% Section X: Funktionen
function F_total = Grav_Pot_vektorisiert(x, m)
n = length(x);
F_neu = zeros(n,2,n);
r = zeros(n,2,n);
F_total = zeros(n,2);
r_betrag = zeros(n,2);
for i=1:n
%     F_neu = zeros(n,2,i);
    r(:,:,i) = bsxfun(@minus, x, x(i,:));
    for j=1:n
        r_betrag(j,:) = norm(sum(r(j,:,i), 2))
    end
    F_neu(:,:,i) = bsxfun(@times, [1*m(i)*m./(r_betrag.^3)], r(:,:,i));
    F = F_neu;
    F(isnan(F_neu)) = 0;
end
F_total(:,:) = sum(F, 3);
end

