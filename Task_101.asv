%         end
%     end
    v_Nneu(:,:) = v_N(:,:) + bsxfun(@rdivide, (F+F_neu), 2*m_N)*delta_t;
    x_positions(:, :, iteration) = x_Nneu(:, :);
    F = F_neu;
    x_N = x_Nneu;
    v_N = v_Nneu;

end

for s = 1:iteration
    for i = 1:n
        plot(x_positions(i,1,s), x_positions(i,2,s), C{i}, 'LineWidth', 1);
        hold on
    end
end
